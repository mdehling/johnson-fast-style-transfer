{
    "name": "dev",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
    "hostRequirements": {
        "cpus": 4,
        "memory": "32gb",
        "gpu": true,
        "storage": "64gb"
    },
    "runArgs": [
        "--shm-size=1g"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    }
}
